" ~/.vim/vimrc

if has('vim_starting')
  call init#rc('options')
  call init#rc('init')
endif

call init#rc('settings')
call init#rc('dein')
call init#rc('solarized')

if has('vim_starting')

  colorscheme solarized

  augroup myvimrc
    autocmd VimEnter * ++once ++nested call init#on_filetype() | syntax enable
    au ColorScheme * ++nested call init#on_colors()
  augroup END
endif

if exists('g:vimpager.enabled')

  set nu& rnu& scl& fdc& so& hls

  if has('vim_starting')
    call init#on_filetype() | syntax enable
  endif
endif

